{
  "name": "microfrontend",
  "version": "0.0.0",
  "description": "Microfrontend test application",
  "scripts": {
    "ng": "ng",
    "start": "concurrently --kill-others \"ng serve src-a\" \"ng serve src-b\" \"ng serve src\"",
    "build": "ng build common && ng build controller && ng build client",
    "test": "ng test common && ng test controller && ng test client",
    "coverage": "ng test common --code-coverage && ng test controller --code-coverage && ng test client --code-coverage",
    "lint": "ng lint common && ng lint controller && ng lint client",
    "e2e": "concurrently  -k --success first --kill-others \"npm run start\" \"npm run wait && npm run protractor\"",
    "protractor": "./node_modules/.bin/protractor e2e/protractor.conf.js",
    "webdriver:update": "./node_modules/.bin/webdriver-manager update",
    "prettier": "prettier --write \"{projects,src,e2e}/**/*.ts\"",
    "wait": "./node_modules/.bin/wait-on tcp:30103"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@microfrontend/common": "^1.3.0",
    "lib": "^4.0.5",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.21",
    "@angular-devkit/build-ng-packagr": "~0.803.21",
    "@angular/cli": "~8.3.21",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "concurrently": "^5.0.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^5.4.0",
    "prettier": "^1.19.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "^5.20.1",
    "typescript": "~3.5.3",
    "wait-on": "^3.3.0"
  }
}
