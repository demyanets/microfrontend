{
  "name": "microfrontend",
  "version": "0.0.0",
  "description": "Microfrontend test application",
  "scripts": {
    "ng": "ng",
    "start": "concurrently --kill-others \"ng serve src-a\" \"ng serve src-b\" \"ng serve src\"",
    "build": "ng build common && ng build controller && ng build client",
    "test": "ng test common && ng test controller && ng test client",
    "coverage": "ng test common --code-coverage && ng test controller --code-coverage && ng test client --code-coverage",
    "lint": "ng lint common && ng lint controller && ng lint client",
    "e2e": "concurrently  -k --success first --kill-others \"npm run start\" \"npm run wait && npm run protractor\"",
    "protractor": "./node_modules/.bin/protractor e2e/protractor.conf.js",
    "webdriver:latest": "cd ./node_modules/protractor && npm i webdriver-manager@latest",
    "webdriver:update": "./node_modules/.bin/webdriver-manager update",
    "webdriver": "npm run webdriver:latest && npm run webdriver:update",
    "prettier": "prettier --write \"{projects,src,e2e}/**/*.ts\"",
    "wait": "./node_modules/.bin/wait-on tcp:30103"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.6",
    "@angular/cli": "^8.3.4",
    "@angular/common": "^8.2.6",
    "@angular/compiler": "^8.2.6",
    "@angular/core": "^8.2.6",
    "@angular/forms": "^8.2.6",
    "@angular/http": "^7.2.15",
    "@angular/platform-browser": "^8.2.6",
    "@angular/platform-browser-dynamic": "^8.2.6",
    "@angular/platform-server": "^8.2.6",
    "@microfrontend/common": "^1.3.0",
    "core-js": "^3.2.1",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.4",
    "@angular-devkit/build-ng-packagr": "^0.803.4",
    "@angular/compiler-cli": "~8.2.6",
    "@angular/language-service": "~8.2.6",
    "@types/jasmine": "~3.4.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.7.5",
    "codelyzer": "^5.0.0",
    "concurrently": "^4.1.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^5.5.1",
    "prettier": "^1.18.2",
    "protractor": "^5.4.2",
    "ts-node": "~8.4.1",
    "tsickle": "^0.37.0",
    "tslint": "^5.20.0",
    "typescript": "~3.5.3",
    "wait-on": "^3.3.0"
  }
}
